{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "./index.ts",
    "./config/**/*.ts",
    "./routes/**/*.ts",
    "./services/**/*.ts",
    "./controllers/**/*.ts"
  ]
}
