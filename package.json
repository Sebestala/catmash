  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "turbo": "^2.2.3"
  },
  "packageManager": "pnpm@8.15.8",
  "engines": {
    "node": ">=18",
    "pnpm": "8.15.8"
  },
  "name": "with-tailwind",
